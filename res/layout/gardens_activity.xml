<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <fragment
        android:id="@+id/gardensFragmentContainer"
        android:name="net.sareweb.android.barazkide.fragment.GardensFragment_"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        tools:layout="@layout/gardens_fragment" />

    <fragment
        android:id="@+id/gardenDetailContainer"
        android:name="net.sareweb.android.barazkide.fragment.GardenDetailFragment_"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/garden_detail" />

</LinearLayout>